<!-- *******************  Tokens and Token-based Annotations *********************** -->

<queries>
    <query id="1">
        <string>[]</string>
        <description>find all single tokens of every type</description>
        <corpus></corpus>
    </query>
    <query id="2">
        <string>[word="that"]</string>
        <description>find transcribed token 'that'</description>
        <corpus></corpus>
    </query>
    <query id="3">
        <string>[lemma="be"]</string>
        <description>find transcribed token 'that'</description>
        <corpus></corpus>
    </query> 
    <query id="4">
        <string>[incident="((laughing))"]</string>
        <description>find all non-verbal events annotated with '((laughing))'</description>
        <corpus></corpus>
    </query>
    <query id="5">
        <string>[word="Did"][word="you"]</string>
        <description>find 'Did' followed by 'you'</description>
        <corpus></corpus>
    </query>
    <query id="6">
        <string>&lt;incident/&gt;</string>
        <description>find all non-verbal events such as laughing</description>
        <corpus></corpus>
    </query>
    <query id="7">
        <string>[pos="VM(INF|PP|FIN)"]</string>
        <description>find all modal verbs (= annotated with pos tags 'VMINF', 'VMFIN' or 'VMPP')</description>
        <corpus></corpus>
    </query>
    <query id="8">
        <string>&lt;word/&gt;</string> <!-- alternative: [(!pause=".*" &amp; !vocal=".*" &amp; !incident=".*")]-->
        <description>find all single word tokens</description>
        <corpus></corpus>
    </query>
    <query id="9">
        <string>[word="verhindern"] precededby [word="Armut"]</string>
        <description>find 'untersuchung' preceded by 'die'</description>
        <corpus>FOLK|GWSS</corpus>
    </query>
    <query id="10">
        <string>[word="m√ºssen"] !precededby [lemma="wir"]</string>
        <description>find 'untersuchung' not preceded by 'die'</description>
        <corpus>FOLK|GWSS</corpus>
    </query>

</queries>
